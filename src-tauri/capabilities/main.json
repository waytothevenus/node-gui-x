{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:menu:default",
    "core:resources:default",
    "core:window:allow-set-title",
    "core:window:allow-set-position",
    "core:webview:default",
    "fs:default",
    "dialog:allow-save",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}